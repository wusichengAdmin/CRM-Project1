<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huashui.crm.workbench.dao.ClueActivityRelationDao">

    <delete id="deleteRelationByClueId">

        delete from tbl_clue_activity_relation where clueId=#{clueId}

    </delete>



    <select id="getRelationListByClueId" resultType="ClueActivityRelation">

        select * from tbl_clue_activity_relation where clueId=#{clueId}

    </select>


    <insert id="insertActivityBind">

        insert into tbl_clue_activity_relation(

        id,
        clueId,
        activityId

        )values
        <foreach collection="list" separator="," item="car">
            (

            #{car.id},
            #{car.clueId},
            #{car.activityId}

            )

        </foreach>


    </insert>


    <delete id="deleteRelationById">

        delete from tbl_clue_activity_relation where id=#{id}

    </delete>
	
  	
</mapper>

































